    </style>

    <script>
        // Magnetic Button Effect
        const magneticBtns = document.querySelectorAll(".magnetic-btn");

        magneticBtns.forEach((btn) => {
            btn.addEventListener("mousemove", (e: any) => {
                const rect = btn.getBoundingClientRect();
                const x = e.clientX - rect.left - rect.width / 2;
                const y = e.clientY - rect.top - rect.height / 2;

                (btn as HTMLElement).style.transform =
                    `translate(${x * 0.3}px, ${y * 0.3}px)`;
            });

            btn.addEventListener("mouseleave", () => {
                (btn as HTMLElement).style.transform = `translate(0px, 0px)`;
            });
        });

        // Parallax decorative elements
        window.addEventListener("scroll", () => {
            const scrolled = window.scrollY;
            const floaters = document.querySelectorAll(".animate-float");
            floaters.forEach((floater, index) => {
                const speed = (index + 1) * 0.2;
                (floater as HTMLElement).style.transform =
                    `translateY(${scrolled * speed}px) rotate(${scrolled * 0.1}deg)`;
            });
        });
    </script>
