---
// Datos simulados de "Niveles" para las barras de progreso
const stats = [
    { label: "Frontend (React/Astro)", level: 95 },
    { label: "Backend (Node/PHP)", level: 80 },
    { label: "UI/UX Design", level: 85 },
    { label: "Database SQL", level: 75 }
];
---

<section id="sobre-mi" class="py-32 bg-neo-black relative overflow-hidden">
    
    <!-- Fondo Grid Táctico -->
    <div class="absolute inset-0 opacity-10 pointer-events-none" 
         style="background-image: linear-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px), 
         linear-gradient(90deg, rgba(255, 255, 255, 0.05) 1px, transparent 1px); 
         background-size: 50px 50px;">
    </div>

    <div class="container mx-auto px-4 relative z-10">
        
        <!-- Contenedor Principal tipo "ID Card" Gigante -->
        <div class="max-w-6xl mx-auto grid md:grid-cols-12 gap-8 border-2 border-white/10 bg-[#111] p-6 md:p-12 relative shadow-[0_0_50px_rgba(0,0,0,0.5)]">
            
            <!-- Decoración Esquinas Tech -->
            <div class="absolute -top-2 -left-2 w-8 h-8 border-t-4 border-l-4 border-neo-lime"></div>
            <div class="absolute -bottom-2 -right-2 w-8 h-8 border-b-4 border-r-4 border-neo-lime"></div>
            <div class="absolute top-1/2 -left-3 w-1 h-20 bg-neo-pink"></div>
            <div class="absolute top-1/2 -right-3 w-1 h-20 bg-neo-cyan"></div>

            <!-- COLUMNA 1: IMAGEN & DATOS RÁPIDOS (4 columnas) -->
            <div class="md:col-span-4 flex flex-col gap-6">
                <!-- Marco de Foto con efecto Glitch estático -->
                <div class="relative group">
                    <div class="absolute inset-0 bg-neo-lime translate-x-2 translate-y-2 group-hover:translate-x-3 group-hover:translate-y-3 transition-transform duration-300"></div>
                    <div class="relative border-2 border-white bg-neo-black overflow-hidden aspect-square">
                        <!-- AQUÍ VA TU IMAGEN GENERADA TIPO CÓMIC -->
                        <img 
                            src="/generated-image.webp" 
                            alt="Avatar Developer" 
                            class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
                        />
                        <!-- Overlay de escaneo -->
                        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-neo-lime/20 to-transparent h-full w-full animate-scan opacity-50 pointer-events-none"></div>
                    </div>
                </div>

                <!-- Datos Rápidos -->
                <div class="bg-white/5 p-4 border border-white/10 font-mono text-xs">
                    <div class="flex justify-between border-b border-white/10 pb-2 mb-2">
                        <span class="text-gray-400">UBICACIÓN:</span>
                        <span class="text-neo-lime">LA LIGUA, REGIÓN DE VALPARAÍSO, CHILE</span>
                    </div>
                    <div class="flex justify-between border-b border-white/10 pb-2 mb-2">
                        <span class="text-gray-400">ESTADO:</span>
                        <span class="text-neo-cyan animate-pulse">DISPONIBLE</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">EXP:</span>
                        <span class="text-white">RECIÉN EGRESADO</span>
                    </div>
                </div>
            </div>

            <!-- COLUMNA 2: BIO & STATS (8 columnas) -->
            <div class="md:col-span-8 flex flex-col justify-center">
                
                <!-- Encabezado -->
                <div class="mb-8">
                    <span class="bg-neo-pink text-black text-xs font-bold px-2 py-1 mb-4 inline-block transform -rotate-1">
                        ANALISTA PROGRAMADOR COMPUTACIONAL
                    </span>
                    <h2 class="text-5xl md:text-6xl font-black text-white uppercase leading-[0.9] mb-6">
                        DISEÑO EL FUTURO JUNTO A LA IA <br/>
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-neo-lime to-neo-cyan">CÓDIGO X CÓDIGO</span>
                    </h2>
                    <p class="text-gray-300 text-lg leading-relaxed border-l-4 border-neo-purple pl-6">
                        No soy el típico desarrollador que solo escribe código. Soy un <strong class="text-white">arquitecto digital</strong> formado en Duoc UC, obsesionado con el rendimiento y la estética. 
                        Transformo ideas abstractas en interfaces funcionales que tus clientes amarán usar.
                    </p>
                </div>

                <!-- Barras de Habilidad (Stats) -->
                <div class="space-y-6">
                    <h3 class="text-neo-lime font-mono text-sm tracking-widest border-b border-white/20 pb-2 mb-4">
                        // SISTEMAS_OPERATIVOS
                    </h3>
                    
                    {stats.map((stat) => (
                        <div class="group">
                            <div class="flex justify-between mb-1">
                                <span class="text-sm font-bold text-white group-hover:text-neo-cyan transition-colors">{stat.label}</span>
                                <span class="text-xs font-mono text-neo-lime">{stat.level}%</span>
                            </div>
                            <div class="h-2 w-full bg-white/10 relative overflow-hidden">
                                <!-- Barra de progreso animada -->
                                <div class="h-full bg-gradient-to-r from-neo-cyan to-neo-purple absolute top-0 left-0 transition-all duration-1000 group-hover:brightness-150" 
                                     style={`width: ${stat.level}%`}></div>
                            </div>
                        </div>
                    ))}
                </div>

<!-- Botón CV Ultra Animado -->
<div class="mt-12">
    <a 
        href="/curriculum.pdf" 
        download="Curriculum_Vitae_2025.pdf" 
        target="_blank"
        class="group relative inline-flex items-center gap-3 px-8 py-4 bg-neo-black border border-white/20 text-white font-black tracking-widest uppercase overflow-hidden hover:text-black transition-colors duration-300"
    >
        <!-- Fondo deslizante al Hover (Color Lima) -->
        <div class="absolute inset-0 bg-neo-lime translate-y-full group-hover:translate-y-0 transition-transform duration-300 ease-out"></div>
        
        <!-- Borde Glitch Animado (Esquinas) -->
        <span class="absolute top-0 left-0 w-2 h-2 border-t-2 border-l-2 border-neo-lime group-hover:border-black transition-colors"></span>
        <span class="absolute bottom-0 right-0 w-2 h-2 border-b-2 border-r-2 border-neo-lime group-hover:border-black transition-colors"></span>
        <span class="absolute top-0 right-0 w-2 h-2 border-t-2 border-r-2 border-neo-lime opacity-0 group-hover:opacity-100 transition-opacity"></span>
        <span class="absolute bottom-0 left-0 w-2 h-2 border-b-2 border-l-2 border-neo-lime opacity-0 group-hover:opacity-100 transition-opacity"></span>

        <!-- Icono y Texto (Relative para estar sobre el fondo deslizante) -->
        <svg class="w-5 h-5 relative z-10 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
        </svg>
        
        <span class="relative z-10">DESCARGAR CV_V2.0</span>
    </a>
</div>

            </div>
        </div>
    </div>
</section>

<style>
    @keyframes scan {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(100%); }
    }
    .animate-scan {
        animation: scan 3s linear infinite;
    }
</style>
