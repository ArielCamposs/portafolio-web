---
import "@fontsource-variable/onest"; // Asegúrate de tener la fuente
interface Props {
    title: string;
    description?: string;
}
const {
    title,
    description = "Ariel Campos - Analista Programador Web especializado en React, Astro y Tailwind CSS. Creando interfaces modernas y eficientes.",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- SEO Primario -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <meta name="author" content="Ariel Campos" />
        <meta
            name="keywords"
            content="Ariel Campos, Portafolio, Programador Web, Analista Programador, React, Astro, Tailwind CSS, Chile, Desarrollo Web"
        />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://arielcampos.dev/" />
        <!-- Actualizar con tu URL real -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content="/og-image.jpg" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content="https://arielcampos.dev/" />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content="/og-image.jpg" />
    </head>
    <body
        class="bg-neo-black text-neo-white font-sans overflow-x-hidden selection:bg-neo-lime selection:text-black"
    >
        <!-- Fondo con Ruido (Noise Texture) -->
        <div
            class="fixed inset-0 opacity-[0.03] pointer-events-none z-50"
            style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"
        >
        </div>

        <!-- Malla de fondo (Grid) -->
        <div
            class="fixed inset-0 bg-[linear-gradient(to_right,#1a1a1a_1px,transparent_1px),linear-gradient(to_bottom,#1a1a1a_1px,transparent_1px)] bg-[size:4rem_4rem] -z-10 transform perspective-1000 rotate-x-12 scale-125 opacity-20"
        >
        </div>

        <!-- Círculos de color difuso -->
        <div
            class="fixed top-20 left-[-100px] w-[500px] h-[500px] bg-neo-purple/15 rounded-full blur-[120px] -z-10 animate-pulse"
        >
        </div>
        <div
            class="fixed bottom-0 right-[-100px] w-[600px] h-[600px] bg-neo-cyan/10 rounded-full blur-[140px] -z-10"
        >
        </div>

        <slot />
    </body>
</html>
