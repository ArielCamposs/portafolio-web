---
import "@fontsource-variable/onest"; // Asegúrate de tener la fuente
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <meta name="viewport" content="width=device-width" />
    </head>
    <body
        class="bg-neo-black text-neo-white font-sans overflow-x-hidden selection:bg-neo-lime selection:text-black"
    >
        <!-- Fondo con Ruido (Noise Texture) -->
        <div
            class="fixed inset-0 opacity-[0.03] pointer-events-none z-50"
            style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"
        >
        </div>

        <!-- Malla de fondo (Grid) -->
        <div
            class="fixed inset-0 bg-[linear-gradient(to_right,#222_1px,transparent_1px),linear-gradient(to_bottom,#222_1px,transparent_1px)] bg-[size:4rem_4rem] -z-10 transform perspective-1000 rotate-x-12 scale-125 opacity-30"
        >
        </div>

        <!-- Círculos de color difuso -->
        <div
            class="fixed top-20 left-[-100px] w-[500px] h-[500px] bg-neo-purple/20 rounded-full blur-[100px] -z-10 animate-pulse"
        >
        </div>
        <div
            class="fixed bottom-0 right-[-100px] w-[600px] h-[600px] bg-neo-lime/10 rounded-full blur-[120px] -z-10"
        >
        </div>

        <slot />
    </body>
</html>
