---
import "@fontsource-variable/onest"; // Asegúrate de tener la fuente
interface Props {
    title: string;
    description?: string;
}
const {
    title,
    description = "Ariel Campos - Analista Programador Web especializado en React, Astro y Tailwind CSS. Creando interfaces modernas y eficientes.",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap"
            rel="stylesheet"
        />

        <!-- SEO Primario -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <meta name="author" content="Ariel Campos" />
        <meta
            name="keywords"
            content="Ariel Campos, Portafolio, Programador Web, Analista Programador, React, Astro, Tailwind CSS, Chile, Desarrollo Web"
        />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://arielcampos.dev/" />
        <!-- Actualizar con tu URL real -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content="/og-image.jpg" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content="https://arielcampos.dev/" />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content="/og-image.jpg" />
    </head>
    <body
        class="bg-neo-black text-neo-white font-outfit overflow-x-hidden selection:bg-neo-lime selection:text-black scroll-smooth"
    >
        <!-- Custom Glow Cursor -->
        <div
            id="glow-cursor"
            class="fixed w-[400px] h-[400px] bg-neo-purple/20 rounded-full blur-[100px] pointer-events-none z-[-1] opacity-0 transition-opacity duration-500"
        >
        </div>

        <!-- Fondo con Ruido (Noise Texture) -->
        <div
            class="fixed inset-0 opacity-[0.03] pointer-events-none z-50"
            style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"
        >
        </div>

        <!-- Malla de fondo (Grid) -->
        <div
            class="fixed inset-0 bg-[linear-gradient(to_right,#1a1a1a_1px,transparent_1px),linear-gradient(to_bottom,#1a1a1a_1px,transparent_1px)] bg-[size:4rem_4rem] -z-10 transform perspective-1000 rotate-x-12 scale-125 opacity-20"
        >
        </div>

        <!-- Círculos de color difuso -->
        <div
            class="fixed top-20 left-[-100px] w-[500px] h-[500px] bg-neo-purple/15 rounded-full blur-[120px] -z-10 animate-pulse"
        >
        </div>
        <div
            class="fixed bottom-0 right-[-100px] w-[600px] h-[600px] bg-neo-cyan/10 rounded-full blur-[140px] -z-10"
        >
        </div>

        <slot />

        <style is:global>
            :root {
                --neo-gold: #b8996f;
                --neo-purple: #6b4f7c;
                --neo-cyan: #5a8a9a;
            }
            .font-outfit {
                font-family: "Outfit", sans-serif;
            }

            /* Custom Scrollbar Premium */
            ::-webkit-scrollbar {
                width: 8px;
            }
            ::-webkit-scrollbar-track {
                background: #0a0a0a;
            }
            ::-webkit-scrollbar-thumb {
                background: #1a1a1a;
                border-radius: 10px;
                border: 2px solid #0a0a0a;
            }
            ::-webkit-scrollbar-thumb:hover {
                background: #b8996f;
            }

            html.lenis {
                height: auto;
            }
            .lenis.lenis-smooth {
                scroll-behavior: auto;
            }
            .lenis.lenis-smooth [data-lenis-prevent] {
                overscroll-behavior: contain;
            }
            .lenis.lenis-stopped {
                overflow: hidden;
            }
        </style>

        <!-- Lenis Smooth Scroll -->
        <script
            src="https://unpkg.com/@studio-freight/lenis@1.0.33/dist/lenis.min.js"
        ></script>
        <script>
            // Initialize Lenis
            // @ts-ignore
            const lenis = new Lenis({
                duration: 1.2,
                easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
                direction: "vertical",
                gestureDirection: "vertical",
                smooth: true,
                mouseMultiplier: 1,
                smoothTouch: false,
                touchMultiplier: 2,
                infinite: false,
            });

            function raf(time: any) {
                lenis.raf(time);
                requestAnimationFrame(raf);
            }
            requestAnimationFrame(raf);

            // Glow Cursor Logic
            const cursor = document.getElementById("glow-cursor");
            window.addEventListener("mousemove", (e) => {
                if (cursor) {
                    cursor.style.opacity = "1";
                    cursor.style.left = `${e.clientX - 200}px`;
                    cursor.style.top = `${e.clientY - 200}px`;
                }
            });

            // Parallax Grid effect
            const grid = document.querySelector(
                ".fixed.inset-0.bg-\\[linear-gradient",
            );
            window.addEventListener("mousemove", (e) => {
                const moveX = (e.clientX - window.innerWidth / 2) * 0.01;
                const moveY = (e.clientY - window.innerHeight / 2) * 0.01;
                if (grid) {
                    (grid as HTMLElement).style.transform =
                        `perspective(1000px) rotateX(12deg) scale(1.25) translate(${moveX}px, ${moveY}px)`;
                }
            });
        </script>
    </body>
</html>
